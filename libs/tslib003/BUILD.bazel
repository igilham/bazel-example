package(default_visibility = ["//visibility:public"])

load("@build_bazel_rules_nodejs//:defs.bzl", "npm_package")
load("@npm_bazel_typescript//:index.bzl", "ts_library")

filegroup(
    name = 'sources',
    srcs = [
        'index.ts',
    ],
)

ts_library(
    name = 'library',
    srcs = [
        ':sources'
    ],
    deps = [
        '//libs/tslib001:library'
    ],
)

npm_package(
    name = 'tslib003',
    srcs = [
        'package.json',
    ],
    deps = [
        ':library',
        '//libs/tslib001',
    ],
)
